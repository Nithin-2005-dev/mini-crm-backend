{
  "info": {
    "name": "Mini CRM - Tasks API",
    "description": "Postman collection for task management APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Task (ADMIN)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Follow up\",\n  \"description\": \"Call customer for feedback\",\n  \"assignedToId\": \"<EMPLOYEE_ID>\",\n  \"customerId\": \"<CUSTOMER_ID>\"\n}"
        }
      }
    },
    {
      "name": "Get Tasks",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": {
          "raw": "http://localhost:3000/api/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"]
        }
      }
    },
    {
      "name": "Update Task Status",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/tasks/{{taskId}}/status",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks", "{{taskId}}", "status"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"IN_PROGRESS\"\n}"
        }
      }
    }
  ]
}
