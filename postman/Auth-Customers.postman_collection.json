{
  "info": {
    "name": "Mini CRM - Auth, Users & Customers API",
    "description": "Postman collection for authentication, admin user management, and customer APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:3000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Employee User\",\n  \"email\": \"employee@test.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:3000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"admin123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Users (ADMIN)",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "http://localhost:3000/api/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Get User By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "http://localhost:3000/api/users/{{userId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Update User Role",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/api/users/{{userId}}/role",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "users", "{{userId}}", "role"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"EMPLOYEE\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "Create Customer (ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/api/customers",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "customers"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Acme Corp\",\n  \"email\": \"contact@acme.com\",\n  \"phone\": \"9999999999\",\n  \"company\": \"Acme\"\n}"
            }
          }
        },
        {
          "name": "Get Customers (Paginated)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "http://localhost:3000/api/customers?page=1&limit=5",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "customers"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "5" }
              ]
            }
          }
        },
        {
          "name": "Get Customer By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "http://localhost:3000/api/customers/{{customerId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "customers", "{{customerId}}"]
            }
          }
        },
        {
          "name": "Update Customer (ADMIN)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/api/customers/{{customerId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "customers", "{{customerId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company\": \"Updated Company\"\n}"
            }
          }
        },
        {
          "name": "Delete Customer (ADMIN)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "http://localhost:3000/api/customers/{{customerId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "customers", "{{customerId}}"]
            }
          }
        }
      ]
    }
  ]
}
